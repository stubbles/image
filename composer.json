{
    "name": "stubbles/image",
    "type": "library",
    "license": "BSD-3-Clause",
    "description": "Simple image handling support.",
    "require": {
        "php": "^8.2",
        "ext-gd": "*",
        "ext-fileinfo": "*"
    },
    "require-dev": {
        "bovigo/assert": "^8.0",
        "phpunit/phpunit": "^10.5"
    },
    "autoload": {
        "psr-4": {
            "stubbles\\img\\": "src/main/php"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "stubbles\\img\\": "src/test/php"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "7.0.x-dev"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "test": "phpunit",
        "php-coveralls": "php-coveralls"
    }
}
